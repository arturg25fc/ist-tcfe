	$(foreach i, $(NGSTABS), sed -n '/^$i_TAB/,/^$i_END/{p;/^$i_END/q}' $< | grep -v $i_TAB | grep -v $i_END | grep -v '#' | sed 's/\=/\&/g' | sed 's/$$/\\\\ \\hline/g' > $i3_tab.tex;)

ngspice0.log: ../sim/t0.net
	ngspice -b $< -o $@

ngspice1.log: ../sim/t1.net
	ngspice -b $< -o $@

ngspice2.log: ../sim/t2.net
	ngspice -b $< -o $@

ngspice3.log: ../sim/t3.net
	ngspice -b $< -o $@

clean:
	@rm -f *.log *.pdf *.tex *.ps *~

.PHONY: all clean
